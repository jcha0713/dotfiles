# Ghostty configuration
# https://ghostty.org/docs/config

# Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = false

# Shell integration (required for ssh-terminfo to work)
shell-integration = zsh

# SSH - automatically copy terminfo to remote servers, fallback to xterm-256color
shell-integration-features = ssh-terminfo,ssh-env

# Window
title = "Ghostty"
window-padding-x = 0
window-padding-y = 0
window-padding-balance = true

# Hide tab bar and window decorations
window-decoration = none

adjust-cell-height = 10%

# Font
font-family = "ComicCode Nerd Font"
font-style = "Regular"
font-size = 15

# Cursor
cursor-style = "block"
cursor-style-blink = true

# Keybindings
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+a>t=new_tab

link-url = true
