{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "mode": {
    "document": {
      "prompt": "{file:./prompts/document.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true
      }
    },
    "commit": {
      "prompt": "{file:./prompts/commit.txt}",
      "tools": {
        "bash": true,
        "list": true,
        "read": true,
        "grep": true,
        "glob": true
      }
    },
    "review": {
      "prompt": "{file:./prompts/review.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "list": true,
        "read": true,
        "grep": true,
        "glob": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
      "environment": {
        "PATH": "/Users/jcha0713/.local/share/fnm/node-versions/v23.0.0/installation/bin:/usr/local/bin:/bin"
      }
    }
  }
}
