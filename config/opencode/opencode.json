{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "messages_half_page_down": "ctrl+d",
    "messages_half_page_up": "ctrl+u"
  },
  "mode": {
    "commit": {
      "prompt": "{file:./prompts/commit.txt}",
      "tools": {
        "bash": true,
        "glob": true,
        "grep": true,
        "list": true,
        "read": true
      }
    },
    "document": {
      "prompt": "{file:./prompts/document.txt}",
      "tools": {
        "bash": true,
        "edit": true,
        "glob": true,
        "grep": true,
        "read": true,
        "webfetch": true,
        "write": true
      }
    },
    "review": {
      "prompt": "{file:./prompts/review.txt}",
      "tools": {
        "bash": true,
        "edit": false,
        "glob": true,
        "grep": true,
        "list": true,
        "read": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "write": false
      }
    }
  },
  "provider": {
    "ollama": {
      "models": {
        "qwen3-coder-next:cloud": {
          "_launch": true,
          "name": "qwen3-coder-next:cloud"
        }
      },
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://127.0.0.1:11434/v1"
      }
    }
  },
  "theme": "kanagawa",
  "tui": {
    "scroll_speed": 2
  }
}