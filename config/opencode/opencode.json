{
  "$schema": "https://opencode.ai/config.json",
  "layout": "stretch",
  "theme": "kanagawa",
  "mode": {
    "document": {
      "prompt": "{file:./prompts/document.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true
      }
    },
    "commit": {
      "prompt": "{file:./prompts/commit.txt}",
      "tools": {
        "bash": true,
        "list": true,
        "read": true,
        "grep": true,
        "glob": true
      }
    },
    "review": {
      "prompt": "{file:./prompts/review.txt}",
      "tools": {
        "bash": true,
        "list": true,
        "read": true,
        "grep": true,
        "glob": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true
      }
    }
  }
}
